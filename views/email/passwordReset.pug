extends baseEmail

block content
  p Hi #{firstName},
  p Did you forget your password?
  p You can reset your password here 
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reset Password
  p If you remember your password, please ignore this email
